<style>
  .slide-guardrails {
    position: relative;
    width: 100%;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .slide-background {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(circle at 40% 30%, rgba(34, 197, 94, 0.08) 0%, transparent 50%),
      radial-gradient(circle at 60% 70%, rgba(59, 130, 246, 0.1) 0%, transparent 50%);
    z-index: 1;
  }

  .slide-content {
    position: relative;
    z-index: 2;
    max-width: 1400px;
    width: 100%;
    padding: var(--spacing-content);
    animation: fadeUp 0.8s ease-out;
  }

  .slide-header {
    text-align: center;
    margin-bottom: var(--spacing-header);
  }

  .title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 800;
    margin-bottom: var(--spacing-grid);
  }

  .subtitle {
    font-size: clamp(1.125rem, 2.5vw, 1.5rem);
    color: var(--color-electric);
    font-weight: 500;
  }

  .prompt-structure {
    padding: var(--spacing-card);
    margin-bottom: var(--spacing-grid);
  }

  .prompt-structure h3 {
    text-align: center;
    margin-bottom: var(--spacing-grid);
  }

  .structure-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-grid);
  }

  .structure-item {
    padding: var(--spacing-md);
    background: rgba(10, 22, 40, 0.4);
    border-radius: var(--radius-md);
    border-left: 3px solid var(--color-electric);
  }

  .structure-number {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--color-electric), var(--color-accent-bright));
    color: var(--color-base-dark);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 900;
    font-family: var(--font-display);
    margin-bottom: var(--spacing-sm);
  }

  .structure-item h4 {
    font-size: 1.125rem;
    font-weight: 700;
    margin-bottom: var(--spacing-xs);
    color: var(--color-electric);
  }

  .structure-item p {
    font-size: 0.85rem;
    opacity: 0.85;
  }

  .example-prompt {
    padding: var(--spacing-card);
    margin-bottom: var(--spacing-grid);
  }

  .example-prompt h3 {
    margin-bottom: var(--spacing-grid);
  }

  .prompt-box {
    background: rgba(10, 22, 40, 0.6);
    padding: var(--spacing-lg);
    border-radius: var(--radius-md);
    border: 2px solid rgba(34, 197, 94, 0.3);
  }

  .prompt-section {
    margin-bottom: var(--spacing-grid);
  }

  .prompt-section:last-child {
    margin-bottom: 0;
  }

  .prompt-label {
    font-family: var(--font-mono);
    font-weight: 700;
    color: #22c55e;
    font-size: 0.9rem;
    display: block;
    margin-bottom: var(--spacing-xs);
  }

  .prompt-section p {
    font-size: 0.9rem;
    opacity: 0.9;
    padding-left: var(--spacing-md);
  }

