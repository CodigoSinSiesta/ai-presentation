<style>
  .slide-resilience {
    position: relative;
    width: 100%;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .slide-background {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(circle at 45% 35%, rgba(139, 92, 246, 0.08) 0%, transparent 50%),
      radial-gradient(circle at 55% 65%, rgba(59, 130, 246, 0.1) 0%, transparent 50%);
    z-index: 1;
  }

  .slide-content {
    position: relative;
    z-index: 2;
    max-width: 1400px;
    width: 100%;
    padding: var(--spacing-3xl);
    animation: fadeUp 0.8s ease-out;
  }

  .slide-header {
    text-align: center;
    margin-bottom: var(--spacing-3xl);
  }

  .r-badge {
    display: inline-block;
    padding: var(--spacing-sm) var(--spacing-lg);
    background: linear-gradient(135deg, #8b5cf6, #a78bfa);
    color: var(--color-base-dark);
    font-weight: 900;
    font-family: var(--font-display);
    border-radius: var(--radius-lg);
    margin-bottom: var(--spacing-md);
    font-size: 1.25rem;
  }

  .title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 800;
    margin-bottom: var(--spacing-md);
    color: #a78bfa;
  }

  .subtitle {
    font-size: clamp(1.125rem, 2.5vw, 1.5rem);
    color: #a78bfa;
    font-weight: 500;
  }

  .patterns-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-xl);
    margin-bottom: var(--spacing-2xl);
  }

  .pattern-card {
    padding: var(--spacing-xl);
    transition: all var(--transition-base);
    border-left: 4px solid #8b5cf6;
  }

  .pattern-card:hover {
    transform: translateY(-6px);
    border-left-color: #a78bfa;
  }

  h3 {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: var(--spacing-md);
  }

  p {
    font-size: 0.9rem;
    opacity: 0.85;
    margin-bottom: var(--spacing-md);
  }

  .example {
    background: rgba(10, 22, 40, 0.6);
    padding: var(--spacing-sm);
    border-radius: var(--radius-sm);
    font-family: var(--font-mono);
    font-size: 0.8rem;
    border-left: 2px solid #8b5cf6;
  }

  .states {
    display: flex;
    gap: var(--spacing-sm);
    align-items: center;
    flex-wrap: wrap;
  }

  .state {
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: var(--radius-sm);
    font-size: 0.75rem;
    font-weight: 600;
  }

  .state.closed {
    background: rgba(34, 197, 94, 0.2);
    color: #22c55e;
  }

  .state.open {
    background: rgba(239, 68, 68, 0.2);
    color: #ef4444;
  }

  .state.half {
    background: rgba(251, 146, 60, 0.2);
    color: #fb923c;
  }

  .tools-mini {
    display: flex;
    gap: var(--spacing-sm);
    flex-wrap: wrap;
  }

  .tools-mini span {
    font-size: 0.75rem;
    padding: var(--spacing-xs) var(--spacing-sm);
    background: rgba(139, 92, 246, 0.15);
    border-radius: var(--radius-sm);
    color: #a78bfa;
  }

  .checklist-section {
    padding: var(--spacing-2xl);
    margin-bottom: var(--spacing-xl);
  }

  .checklist-cols {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-xl);
  }

  ul {
    list-style: none;
    padding: 0;
  }

  ul li {
    padding: var(--spacing-sm) 0 var(--spacing-sm) var(--spacing-lg);
    position: relative;
    font-size: 0.95rem;
    opacity: 0.85;
  }

  ul li::before {
    content: '‚úì';
    position: absolute;
    left: 0;
    color: #8b5cf6;
    font-weight: 900;
  }

  .golden-rule {
    padding: var(--spacing-xl);
    text-align: center;
    border: 2px solid #8b5cf6;
    background: rgba(139, 92, 246, 0.05);
  }

  .golden-rule p {
    font-size: 1.125rem;
    line-height: 1.6;
  }

  .golden-rule strong {
    color: #a78bfa;
  }

  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 1024px) {
    .patterns-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .checklist-cols {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .slide-content {
      padding: var(--spacing-2xl) var(--spacing-lg);
    }

    .patterns-grid {
      grid-template-columns: 1fr;
    }

    .pattern-card {
      padding: var(--spacing-lg);
    }
  }
</style>
