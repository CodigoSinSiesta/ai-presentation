<style>
  .slide-readability {
    position: relative;
    width: 100%;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .slide-background {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(circle at 40% 30%, rgba(34, 197, 94, 0.08) 0%, transparent 50%),
      radial-gradient(circle at 60% 70%, rgba(59, 130, 246, 0.1) 0%, transparent 50%);
    z-index: 1;
  }

  .slide-content {
    position: relative;
    z-index: 2;
    max-width: 1400px;
    width: 100%;
    padding: var(--spacing-content);
    animation: fadeUp 0.8s ease-out;
  }

  .slide-header {
    text-align: center;
    margin-bottom: var(--spacing-header);
  }

  .r-badge {
    display: inline-block;
    padding: var(--spacing-sm) var(--spacing-lg);
    background: linear-gradient(135deg, #22c55e, #4ade80);
    color: var(--color-base-dark);
    font-weight: 900;
    font-family: var(--font-display);
    border-radius: var(--radius-lg);
    margin-bottom: var(--spacing-grid);
    font-size: 1.25rem;
  }

  .title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 800;
    margin-bottom: var(--spacing-grid);
    color: #22c55e;
  }

  .subtitle {
    font-size: clamp(1.125rem, 2.5vw, 1.5rem);
    color: #4ade80;
    font-weight: 500;
  }

  .principles-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-grid);
    margin-bottom: var(--spacing-grid);
  }

  .principle-card {
    padding: var(--spacing-card);
    transition: all var(--transition-base);
    border-left: 4px solid #22c55e;
  }

  .principle-card:hover {
    transform: translateY(-6px);
    border-left-color: #4ade80;
  }

  h3 {
    font-size: 1.375rem;
    font-weight: 700;
    margin-bottom: var(--spacing-grid);
    color: var(--color-neutral-light);
  }

  .example-box {
    padding: var(--spacing-md);
    border-radius: var(--radius-md);
    font-family: var(--font-mono);
    font-size: 0.85rem;
    margin: var(--spacing-sm) 0;
  }

  .example-box code {
    display: block;
    padding: var(--spacing-xs) 0;
  }

  .example-box.bad {
    background: rgba(239, 68, 68, 0.1);
    border-left: 3px solid #ef4444;
  }

  .example-box.good {
    background: rgba(34, 197, 94, 0.1);
    border-left: 3px solid #22c55e;
  }

  .arrow {
    text-align: center;
    font-size: 1.5rem;
    color: var(--color-electric);
    margin: var(--spacing-sm) 0;
  }

  .metric-desc {
    font-size: 0.95rem;
    opacity: 0.85;
    margin-bottom: var(--spacing-grid);
  }

  .complexity-visual {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-grid);
  }

  .complexity-bar {
    padding: var(--spacing-md);
    border-radius: var(--radius-md);
    font-size: 0.9rem;
    font-weight: 600;
    text-align: center;
  }

  .complexity-bar.acceptable {
    background: rgba(34, 197, 94, 0.2);
    border-left: 4px solid #22c55e;
  }

  .complexity-bar.warning {
    background: rgba(251, 146, 60, 0.2);
    border-left: 4px solid #fb923c;
  }

  .complexity-bar.danger {
    background: rgba(239, 68, 68, 0.2);
    border-left: 4px solid #ef4444;
  }

  .guidelines {
